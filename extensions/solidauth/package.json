{
  "name": "solidauth",
  "publisher": "inrupt",
  "displayName": "solidAuth",
  "description": "An Authentication Provider for the Solid Ecosystem",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inrupt/vscode-extension-solidfs.git"
  },
  "bugs": {
    "email": "support@inrupt.com",
    "url": "https://github.com/inrupt/vscode-extension-solidfs/issues"
  },
  "homepage": "https://github.com/microsoft/vscode-wordcount/blob/main/solidauth/README.md",
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "image.png",
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:solidauth.login",
    "onCommand:solidauth.logout",
    "onAuthenticationRequest:solidauth"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "solidauth.login",
        "title": "Log in with a Solid Pod provider",
        "category": "Solid Auth"
      },
      {
        "command": "solidauth.logout",
        "title": "Log out of all Solid providers",
        "category": "Solid Auth"
      }
    ],
    "authentication": [
      {
        "id": "solidauth",
        "label": "Solid Ecosystem"
      }
    ]
  },
  "scripts": {
    "solidauth:global:install": "code --install-extension ./solidauth-$npm_package_version.vsix",
    "solidauth:global:uninstall": "code --uninstall-extension inrupt.solidauth",
    "licenses:check": "license-checker --out license.csv --failOn --development \"AGPL-1.0-only; AGPL-1.0-or-later; AGPL-3.0-only; AGPL-3.0-or-later; Beerware; CC-BY-NC-1.0; CC-BY-NC-2.0; CC-BY-NC-2.5; CC-BY-NC-3.0; CC-BY-NC-4.0; CC-BY-NC-ND-1.0; CC-BY-NC-ND-2.0; CC-BY-NC-ND-2.5; CC-BY-NC-ND-3.0; CC-BY-NC-ND-4.0; CC-BY-NC-SA-1.0; CC-BY-NC-SA-2.0; CC-BY-NC-SA-2.5; CC-BY-NC-SA-3.0; CC-BY-NC-SA-4.0; CPAL-1.0; EUPL-1.0; EUPL-1.1; EUPL-1.1;  GPL-1.0-only; GPL-1.0-or-later; GPL-2.0-only;  GPL-2.0-or-later; GPL-3.0; GPL-3.0-only; GPL-3.0-or-later; SISSL;  SISSL-1.2; WTFPL\"",
    "vscode:prepublish": "npm run package:webpack",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package:webpack": "webpack --mode production --devtool hidden-source-map",
    "package:vsce": "vsce package --no-dependencies",
    "package": "npm run package:webpack && npm run package:vsce",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@comunica/query-sparql": "^2.5.2",
    "@comunica/query-sparql-solid": "^2.4.0",
    "@inrupt/solid-client": "^1.23.3",
    "@inrupt/solid-client-authn-core": "^1.12.2",
    "@inrupt/solid-client-authn-node": "^1.12.2",
    "@inrupt/solid-vscode-auth": "^0.0.0",
    "solid-node-interactive-auth": "1.1.0"
  },
  "overrides": {
    "@inrupt/solid-client-authn-node": "$@inrupt/solid-client-authn-node",
    "@inrupt/solid-client-authn-core": "$@inrupt/solid-client-authn-core"
  }
}
