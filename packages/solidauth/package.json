{
  "name": "solidauth",
  "publisher": "inrupt",
  "displayName": "solidAuth",
  "description": "An Authentication Provider for the Solid Ecosystem",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:solidauth.login",
    "onCommand:solidauth.logout",
    "onAuthenticationRequest:solidauth"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/inrupt/vscode-extension-solidfs.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "solidauth.login",
        "title": "Log in with a Solid Pod provider",
        "category": "Solid Auth"
      },
      {
        "command": "solidauth.logout",
        "title": "Log out of all Solid providers",
        "category": "Solid Auth"
      }
    ],
    "authentication": [
      {
        "id": "solidauth",
        "label": "Solid Ecosystem"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package:webpack",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package:webpack": "webpack --mode production --devtool hidden-source-map",
    "package:vsce": "vsce package",
    "package": "npm run package:vsce && npm run package:webpack",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@comunica/query-sparql-solid": "^2.3.0",
    "@inrupt/solid-client-authn-node": "^1.12.2",
    "solid-node-interactive-auth": "^1.1.0",
    "uuid": "^9.0.0"
  }
}
