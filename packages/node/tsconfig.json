{
  "extends": "../../tsconfig.build.json",

  "compilerOptions": {
    "lib": ["es2018"],
    "outDir": "./dist",
    "skipLibCheck": true,
  },

  "typedocOptions": {
    "out": "website/docs/api/node",
    "entryPoints": ["./src/index.ts"],
    "entryDocument": "index.md"
  },

  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "**/__mocks__/*"]
}
