{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": [
    "packages/**/bin/**/*",
    "packages/**/lib/**/*",
    "extensions/**/bin/**/*",
    "extensions/**/lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*",
    "**/__test__/*",
    "**/*.spec.ts",
    "**/*.d.ts",
    "**/*.d.ts"
  ]
}